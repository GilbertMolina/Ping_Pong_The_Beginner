<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="moligamescr.pingpongthebeginner.Configuracion"
    android:background="@drawable/background_configuracion">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:id="@+id/img_brillo"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/brillo2"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/sbBarraBrillo" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPorcentajeBrillo"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_activities_porcentaje_nivel_brillo" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:id="@+id/img_volumen"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/volumen"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/sbBarraVolumenMusica" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPorcentajeVolumen"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_activities_porcentaje_volumen_sonido" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:id="@+id/img_mute"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/mute"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/swSilenciarSonido"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:checked="false" />

</LinearLayout>
