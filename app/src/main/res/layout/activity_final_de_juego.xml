<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="moligamescr.pingpongthebeginner.FinalDeJuego"
    android:background="@drawable/background_final_del_juego">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_activities_puntaje_final"
        android:id="@+id/txtMarcadorFinal"
        android:textColor="#FFFFFFFF"
        android:textSize="19sp"
        android:layout_marginTop="322dp"
        android:layout_marginLeft="45dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_activities_nuevo_record"
        android:id="@+id/txtNuevoRecord"
        android:textColor="#FFFFFFFF"
        android:textSize="19sp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:id="@+id/msg_record_facil"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/msg_record_facil"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:clickable="false"
        android:visibility="invisible" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:id="@+id/msg_record_media"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/msg_record_media"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:clickable="false"
        android:visibility="invisible" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:id="@+id/msg_record_dificil"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/msg_record_dificil"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:clickable="false"
        android:visibility="invisible" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="164dp"
        android:id="@+id/btn_jugar_de_nuevo"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/btn_jugar_de_nuevo"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:clickable="false"
        android:visibility="visible" />

</LinearLayout>
