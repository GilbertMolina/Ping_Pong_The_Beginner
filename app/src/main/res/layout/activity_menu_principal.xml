<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="moligamescr.pingpongthebeginner.MenuPrincipal"
    android:background="@drawable/background_inicio"
    android:weightSum="1">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="164dp"
        android:id="@+id/btn_juegoNuevo"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/btn_jugar"
        android:layout_weight="0.15"
        android:layout_marginTop="218dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="110dp" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="164dp"
        android:id="@+id/btn_configuracion"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/btn_configuracion"
        android:layout_weight="0.15"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="110dp" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="164dp"
        android:id="@+id/btn_practica"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/btn_practica"
        android:layout_weight="0.15"
        android:layout_marginTop="-169dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="164dp"
        android:id="@+id/btn_puntajes"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/btn_puntaciones"
        android:layout_weight="0.15"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="164dp"
        android:id="@+id/btn_acercaDe"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/btn_acerca_de"
        android:layout_weight="0.15"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-45dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</LinearLayout>
