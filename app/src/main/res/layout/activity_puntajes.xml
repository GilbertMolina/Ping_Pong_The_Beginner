<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="moligamescr.pingpongthebeginner.Puntajes"
    android:background="@drawable/background_puntajes">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_activities_puntaje"
        android:id="@+id/txtPuntajeFacil"
        android:textColor="#FFFFFFFF"
        android:textSize="24sp"
        android:layout_marginTop="253dp"
        android:layout_marginLeft="45dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_activities_puntaje"
        android:id="@+id/txtPuntajeMedio"
        android:textColor="#FFFFFFFF"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_activities_puntaje"
        android:id="@+id/txtPuntajeDificil"
        android:textColor="#FFFFFFFF"
        android:textSize="24sp"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="45dp" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="164dp"
        android:id="@+id/btn_restablecer_puntuaciones"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/btn_restablecer_puntuaciones"

        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp" />

</LinearLayout>
